<div class="card-body" id="comments_card">
  <%= form_for([model, model.comments.build]) do |f| %>
    <%= f.text_area :body %>
    <%= f.hidden_field :author_id, value: current_user.id %>
    <%= f.submit %>
  <% end %>
  <%= link_to "Load Comments", road_trip_comments_path(model), id: "load_comments" %> |
  <a href="#" class="card-link" id="hide_comments">Hide Comments</a><br>
  <div class="comments">
    <ul>
    </ul>
  </div>
</div>
